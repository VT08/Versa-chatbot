<%= include_gon %>

<button class="openChatBtn" >
    
</button>

<div class="prompt-container">
    Prompt Text
</div>

<div class="openChat">
    <section class="msger">
        <header class="msger-header">
            <div class="msger-header-title">
                <i class="fas fa-comment-alt"></i> Versa Chatbot
            </div>
            <div class="msger-header-options">
                <span><i class="fas fa-cog"></i></span>
            </div> 
        </header>

        <main class="msger-chat">
            <div class="msg left-msg">
                <div class="msg-img" style="background-image: url(https://image.flaticon.com/icons/svg/327/327779.svg)">
                </div>

                <div class="msg-bubble">
                    <div class="msg-info">
                        <div class="msg-info-name">BOT</div>
                        <div class="msg-info-time">12:45</div>
                    </div>

                    <div class="msg-text">
                        Welcome to Versa, How can I help you today?
                    </div>
                </div>
            </div>

        </main>

        <form class="msger-inputarea">
            <input type="text" class="msger-input" id="chatbot-input" placeholder="Enter your message...">
            <button type="submit" class="msger-send-btn" id="send-button">Send</button>
        </form>
    </section>
</div>
<button class="closeChatBtn" onclick="closeForm()">
    
</button>


<%= stylesheet_link_tag 'style' %>
<%= stylesheet_link_tag "chatbot" %>
<%= javascript_pack_tag 'chatbot_index' %>
<%= javascript_pack_tag 'chat_history' %>